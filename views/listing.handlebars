
<body>


    <!-- Main Content -->
    <div class="container">
        <div class="ourpro">
            <h5 style="color: black;">Our Products</h5>
        </div>
        <div class="section">

            <!--   Card Section  1 -->
            <div class="row">
                <!--   CARD 1   -->
                {{#each products}}
                <div class="col s12 m4">
                    {{!-- {{log this}} --}}
                    <div class="icon-block">
                        {{!-- <img class="responsive-img" src="assets/accesories.png" alt="Unsplashed"> --}}
                        <h1 class="center">{{this.dataValue.product_name}}</h1>
                        <h3 class="center brown-text"><i class="material-icons">{{this.dataValue.product_category}}</i></h3>
                        <div>
                            <h3 class="center">Product Description:</h3>
                            <h2 class="center light">{{this.dataValue.product_description}}</h2>
                        </div>
                        <h4>Asking Price: {{this.dataValue.price}}</h4>
                        <div class="contactInfo">
                            <h3 class="center">Seller Contact Information</h3>
                            <p>{{this.dataValue.seller_name}}</p>
                            <p>{{this.dataValue.seller_number}}</p>
                        </div>

                        <hr>
                            <a id="buyButton" dataValue={{this.dataValues.id}} class="waves-effect waves-light btn-small">BUY</a>
                    </div>
                </div>
            {{/each}}
            
            </div>

        </div>
    </div>
